---
import type { Project } from '../data/projects';

interface Props {
  project: Project;
}

const { project } = Astro.props;
const { name, description, tech, url, status } = project;

const statusDisplay = {
  active: '[active]',
  wip: '[wip]',
  archived: '[archived]',
};

const statusColor = {
  active: 'var(--text-green)',
  wip: 'var(--text-amber)',
  archived: 'var(--text-muted)',
};

const techLabel = tech.join(', ');
---

<article class="project-card human-only">
  <div class="project-header">
    <span class="status" style={`color: ${statusColor[status]}`}>
      {statusDisplay[status]}
    </span>
    {url ? (
      <a href={url} target="_blank" rel="noopener noreferrer" class="project-name">
        {name}
      </a>
    ) : (
      <span class="project-name">{name}</span>
    )}
  </div>

  <p class="project-description">{description}</p>

  <div class="tech-stack">
    {tech.map((item) => (
      <span class="tech-badge">[{item}]</span>
    ))}
  </div>
</article>

<article class="machine-project-card agent-only">
  <h3 class="machine-project-title">
    {url ? <a href={url}>{name}</a> : name}
  </h3>
  <ul class="machine-project-list">
    <li><strong>Status:</strong> {status}</li>
    <li><strong>Tech:</strong> {techLabel}</li>
    <li><strong>Description:</strong> {description}</li>
  </ul>
</article>

<style scoped>
  .project-card {
    background-color: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: 4px;
    padding: 1.5rem;
    margin-bottom: 1.5rem;
    transition: all 0.3s ease;
    font-family: var(--font-mono);
    font-size: 0.95rem;
  }

  .human-only {
    display: block;
  }

  .agent-only {
    display: none;
  }

  :global(.agent-mode) .human-only {
    display: none;
  }

  :global(.agent-mode) .agent-only {
    display: block;
  }

  .machine-project-card {
    border-bottom: 1px solid var(--agent-border, var(--border-color));
    padding: 1rem 0;
    font-family: var(--font-mono);
  }

  .machine-project-title {
    margin: 0 0 0.6rem;
    font-size: 1rem;
  }

  .machine-project-title a {
    color: var(--agent-link, var(--text-amber));
    text-decoration: underline;
  }

  .machine-project-list {
    margin: 0;
    padding-left: 1.25rem;
    color: var(--agent-text, var(--text-primary));
  }

  .machine-project-list li {
    margin-bottom: 0.3rem;
  }

  .project-card:hover {
    border-color: var(--text-amber);
    box-shadow: 0 0 20px rgba(255, 176, 0, 0.15);
    transform: translateY(-2px);
  }

  .project-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
    flex-wrap: wrap;
  }

  .status {
    font-size: 0.85rem;
    font-weight: 600;
    letter-spacing: 0.5px;
    flex-shrink: 0;
  }

  .project-name {
    color: var(--text-amber);
    font-size: 1.1rem;
    font-weight: 600;
    text-decoration: none;
    border-bottom: 2px solid transparent;
    transition: border-color 0.3s ease;
    padding-bottom: 2px;
  }

  .project-card:hover .project-name {
    border-bottom-color: var(--text-amber);
  }

  .project-name:not(a) {
    color: var(--text-primary);
  }

  .project-description {
    color: var(--text-green);
    line-height: 1.6;
    margin: 1rem 0;
    padding: 0;
  }

  .tech-stack {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
    margin-top: 1rem;
  }

  .tech-badge {
    color: var(--text-muted);
    font-size: 0.85rem;
    padding: 0.25rem 0.5rem;
    border: 1px solid var(--border-color);
    border-radius: 2px;
    transition: all 0.3s ease;
  }

  .tech-badge:hover {
    color: var(--text-green);
    border-color: var(--text-green);
    box-shadow: 0 0 8px rgba(0, 255, 65, 0.2);
  }

  @media (max-width: 768px) {
    .project-card {
      padding: 1.25rem;
      margin-bottom: 1.25rem;
    }

    .project-name {
      font-size: 1rem;
    }

    .project-header {
      gap: 0.75rem;
    }

    .tech-stack {
      gap: 0.5rem;
    }

    .tech-badge {
      font-size: 0.75rem;
    }
  }

  @media (max-width: 480px) {
    .project-card {
      padding: 1rem;
      margin-bottom: 1rem;
    }

    .project-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }

    .project-description {
      font-size: 0.9rem;
    }
  }
</style>
