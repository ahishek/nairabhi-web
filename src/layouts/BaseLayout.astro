---
import '../styles/global.css';
import '../styles/agent-mode.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Abhishek Nair â€” Product Manager, Engineer, Builder" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
    <title>{title} | nairabhi.com</title>
  </head>
  <body class="scanlines" data-view-mode="human">
    <slot name="header" />

    <main>
      <slot />
    </main>

    <slot name="footer" />

    <script>
      const VIEW_MODE_KEY = 'view-mode';
      const HUMAN_MODE = 'human';
      const AGENT_MODE = 'agent';

      const getSavedMode = () => {
        const savedMode = localStorage.getItem(VIEW_MODE_KEY);
        return savedMode === AGENT_MODE ? AGENT_MODE : HUMAN_MODE;
      };

      const listeners = new Set();
      let currentMode = getSavedMode();

      const applyMode = (nextMode) => {
        currentMode = nextMode === AGENT_MODE ? AGENT_MODE : HUMAN_MODE;
        document.body.dataset.viewMode = currentMode;
        document.body.classList.toggle('agent-mode', currentMode === AGENT_MODE);
        localStorage.setItem(VIEW_MODE_KEY, currentMode);
      };

      applyMode(currentMode);

      const viewModeStore = {
        getMode() {
          return currentMode;
        },
        setMode(nextMode) {
          const normalizedMode = nextMode === AGENT_MODE ? AGENT_MODE : HUMAN_MODE;
          if (normalizedMode === currentMode) {
            return;
          }

          applyMode(normalizedMode);
          listeners.forEach((listener) => listener(currentMode));
        },
        subscribe(listener) {
          listeners.add(listener);
          listener(currentMode);

          return () => {
            listeners.delete(listener);
          };
        },
      };

      window.__VIEW_MODE_STORE__ = viewModeStore;

      document.addEventListener('view-mode-change', (event) => {
        const customEvent = event;
        viewModeStore.setMode(customEvent.detail?.mode);
      });
    </script>
  </body>
</html>
